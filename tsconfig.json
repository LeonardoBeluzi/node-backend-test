{
    "compilerOptions": {
      "target": "ES2017",
      "module": "commonjs", 
      "lib": ["ES6"], 
      "allowJs": true,
      "sourceMap": true,
      "outDir": "./build",
      "rootDir": "./src",
      "removeComments": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },

    "exclude": [
      "node_modules"
    ],

    "include": [
      "src/**/*.ts"
    ]
  }
  